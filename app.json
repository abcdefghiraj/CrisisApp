{
  "expo": {
    "name": "Crisis App",
    "slug": "CrisisApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "privacy":"public",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "bundleIdentifier": "com.getcrisiscode.crisisapp",
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses camera to scan barcodes on medical stickers that were provided to be scanned in case of emergency."
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "android": {
      "permissions": ["CAMERA"]
    }
  }
}
